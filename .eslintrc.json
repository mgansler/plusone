{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "import", "react", "testing-library", "unused-imports"],
  "extends": ["plugin:testing-library/react", "plugin:import/recommended", "plugin:import/typescript"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        "@typescript-eslint/consistent-type-imports": "error",
        "unused-imports/no-unused-imports": "error",
        "import/no-unresolved": [
          "error",
          {
            "ignore": ["^@plusone/.*$", "@mgansler/cypress-graphql"]
          }
        ],
        "import/order": [
          "error",
          {
            "newlines-between": "always",
            "pathGroups": [
              {
                "pattern": "@plusone/**",
                "group": "external",
                "position": "after"
              },
              {
                "pattern": "@mgansler/**",
                "group": "external",
                "position": "after"
              }
            ],
            "pathGroupsExcludedImportTypes": ["builtin"]
          }
        ],
        "no-restricted-imports": [
          "error",
          {
            "patterns": ["@remix-run/*"]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        "react/jsx-curly-brace-presence": [
          "error",
          {
            "props": "always",
            "children": "never"
          }
        ]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["**/*.{spec,cy}.{ts,tsx}"],
      "rules": {
        "no-restricted-imports": "off",
        "no-restricted-properties": [
          "error",
          {
            "object": "describe",
            "property": "skip",
            "message": "ðŸ™… Unexpected describe.skip. Please remove before committing. ðŸ’»ðŸ‘®"
          },
          {
            "object": "describe",
            "property": "only",
            "message": "ðŸ™… Unexpected describe.only. Please remove before committing. ðŸ’»ðŸ‘®"
          },
          {
            "object": "it",
            "property": "skip",
            "message": "ðŸ™… Unexpected it.skip. Please remove before committing. ðŸ’»ðŸ‘®"
          },
          {
            "object": "it",
            "property": "only",
            "message": "ðŸ™… Unexpected it.only. Please remove before committing. ðŸ’»ðŸ‘®"
          }
        ]
      }
    },
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
