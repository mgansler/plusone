datasource db {
  provider = "sqlite"
  url      = env("ELGATO_DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = "client"
  binaryTargets = ["linux-musl", "native", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

model DiscoveredDevice {
  id         String  @id
  macAddress String  @unique
  name       String
  fqdn       String
  host       String
  ipv4       String?
  port       Int

  displayName String
  productName String

  isControlled Boolean @default(false)
}

model Device {
  macAddress  String    @id
  displayName String
  lastSeen    DateTime?
  type        String // See enum DeviceType, unfortunately, sqlite doesn't support enums
  address     String
  port        Int

  sunrise Boolean @default(false)
  sunset  Boolean @default(false)
}

model Color {
  id          Int  @id @default(autoincrement())
  brightness  Int
  hue         Int?
  saturation  Int?
  temperature Int?
}

model Location {
  name      String @unique
  longitude Float
  latitude  Float
}

model CommandAction {
  id         Int    @id @default(autoincrement())
  macAddress String

  command   Command @relation(fields: [commandId], references: [id], onDelete: Cascade)
  commandId Int

  on          Boolean
  powerOnly   Boolean
  brightness  Int?
  hue         Int?
  saturation  Int?
  temperature Int?
}

model Command {
  id      Int             @id @default(autoincrement())
  name    String          @unique
  hash    String          @unique
  actions CommandAction[]
}
