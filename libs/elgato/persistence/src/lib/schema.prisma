datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = "client"
  binaryTargets = ["linux-musl", "native", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

model DiscoveredDevice {
  id   String  @id
  name String
  fqdn String
  host String
  ipv4 String?
  port Int

  displayName String
  productName String

  isControlled Boolean @default(false)
}

model Device {
  id          String    @id
  displayName String
  lastSeen    DateTime?
  type        String // See enum DeviceType, unfortunately, sqlite doesn't support enums
  address     String
  port        Int

  sunrise Boolean @default(false)
  sunset  Boolean @default(false)
}

model Color {
  id          Int  @id @default(autoincrement())
  brightness  Int
  hue         Int?
  saturation  Int?
  temperature Int?
}

model Location {
  name      String @unique
  longitude Float
  latitude  Float
}
