datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = "client"
  binaryTargets = ["linux-musl", "native", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

model Device {
  id   String @id
  name String
  fqdn String
  host String
  port Int

  // This should be an enum but unfortunately, sqlite doesn't support enums
  // See DeviceType
  type String @default("unknown")

  lastSeen DateTime?

  groups Group[]

  sunrise Boolean @default(false)
  sunset  Boolean @default(false)
}

model Group {
  id      Int      @id @default(autoincrement())
  name    String
  devices Device[]
  isRoom  Boolean  @default(false)
}

model Location {
  name      String @unique
  longitude Float
  latitude  Float
}
