datasource db {
  provider = "sqlite"
}

generator client {
  provider   = "prisma-client"
  output     = "src/lib/client"
  engineType = "client"
}

model DiscoveredDevice {
  id         String  @id
  macAddress String  @unique
  name       String
  fqdn       String
  host       String
  ipv4       String?
  port       Int

  displayName String
  productName String

  isControlled Boolean @default(false)
}

enum DeviceType {
  RingLight
  LightStrip
  Unknown
}

model Device {
  macAddress  String     @id
  displayName String
  lastSeen    DateTime?
  type        DeviceType
  address     String
  port        Int

  sunrise Boolean @default(false)
  sunset  Boolean @default(false)
}

model Color {
  id          Int  @id @default(autoincrement())
  brightness  Int
  hue         Int?
  saturation  Int?
  temperature Int?
}

model Location {
  name      String @unique
  longitude Float
  latitude  Float
}

model CommandAction {
  id         Int    @id @default(autoincrement())
  macAddress String

  command   Command @relation(fields: [commandId], references: [id], onDelete: Cascade)
  commandId Int

  on          Boolean
  powerOnly   Boolean
  brightness  Int?
  hue         Int?
  saturation  Int?
  temperature Int?
}

model Command {
  id      Int             @id @default(autoincrement())
  name    String          @unique
  hash    String          @unique
  actions CommandAction[]
}
