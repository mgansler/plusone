datasource db {
  provider = "sqlite"
  url      = env("STGTRAILS_DATABASE_URL")
}

generator client {
  provider   = "prisma-client"
  output     = "client"
  engineType = "client"
}

model TrailArea {
  id        Int    @id @default(autoincrement())
  name      String @unique
  latitude  Float
  longitude Float
  threshold Float  @default(0.33)

  country String @default("unknown")
  state   String @default("unknown")

  trails        Trail[]
  weather       WeatherData[]
  sunriseSunset SunriseSunset[]
}

model SunriseSunset {
  id      Int      @id @default(autoincrement())
  date    String
  sunrise DateTime
  sunset  DateTime

  trailArea   TrailArea @relation(fields: [trailAreaId], references: [id])
  trailAreaId Int

  @@unique([trailAreaId, date])
}

model Trail {
  id               Int         @id @default(autoincrement())
  name             String
  alternativeNames TrailName[]

  trailArea   TrailArea @relation(fields: [trailAreaId], references: [id])
  trailAreaId Int
}

model TrailName {
  id   Int    @id @default(autoincrement())
  name String

  trail   Trail @relation(fields: [trailId], references: [id])
  trailId Int
}

model WeatherData {
  id                  Int      @id @default(autoincrement())
  time                DateTime
  temperature2m       Float
  rain                Float
  soilMoisture0To1cm  Float
  soilMoisture1To3cm  Float
  soilMoisture3To9cm  Float
  soilMoisture9To27cm Float

  soilTemperature0cm Float
  soilTemperature6cm Float

  windGusts10m Float

  trailArea   TrailArea @relation(fields: [trailAreaId], references: [id])
  trailAreaId Int

  @@unique([trailAreaId, time])
}

model Invite {
  id   Int    @id @default(autoincrement())
  name String @unique
  code String @unique

  createdAt  DateTime  @default(now())
  expiresAt  DateTime
  acceptedAt DateTime?

  accepted Boolean @default(false)
  expired  Boolean @default(false)
}
