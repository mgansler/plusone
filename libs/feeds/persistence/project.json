{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/feeds/persistence/src",
  "projectType": "library",
  "targets": {
    "format": {
      "executor": "@mgansler/nx-prisma:format",
      "envFile": "apps/feeds/backend/.local.env"
    },
    "generate": {
      "executor": "@mgansler/nx-prisma:generate"
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn prisma migrate dev --schema libs/feeds/persistence/src/lib/schema.prisma",
        "envFile": "libs/feeds/persistence/.local.env"
      }
    },
    "push": {
      "executor": "@mgansler/nx-prisma:push",
      "dependsOn": [
        {
          "target": "generate",
          "projects": "self"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/feeds/persistence/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/feeds/persistence"],
      "options": {
        "jestConfig": "libs/feeds/persistence/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["plugins-nx-prisma"]
}
