datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = "client"
  binaryTargets = ["linux-musl", "darwin"]
}

model Article {
  id          String  @default(uuid()) @id @db.Uuid
  title       String?
  content     String?
  contentBody String?
  guid        String
  link        String?
  feed        Feed    @relation(fields: [feedId], references: [id])
  feedId      String  @db.Uuid
  @@unique([guid, feedId])
}

model Feed {
  id        String  @default(uuid()) @id @db.Uuid
  title     String
  feedUrl   String
  articles  Article[]
}

model User {
  id        String  @default(uuid()) @id @db.Uuid
  username  String  @unique
  password  String
  email     String?
  isAdmin   Boolean @default(false)
}
