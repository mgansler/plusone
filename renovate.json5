{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:base', ':pinAllExceptPeerDependencies', 'group:allNonMajor'],
  automerge: false,
  packageRules: [
    {
      matchPackageNames: ['node'],
      allowedVersions: '20.x',
    },
    {
      // Eslint throws error with 6.1.2
      matchPackageNames: ['@octokit/core'],
      allowedVersions: '!/6\\.1\\.2/',
    },
    {
      // https://github.com/swc-project/swc/issues/8898
      matchPackageNames: ['@swc/core'],
      allowedVersions: '!/1\\.5\\.[012]/',
    },
  ],
}
