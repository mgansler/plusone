{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:recommended', ':pinAllExceptPeerDependencies', 'group:allNonMajor'],
  automerge: false,
  osvVulnerabilityAlerts: true,
  packageRules: [
    {
      matchPackageNames: ['node'],
      allowedVersions: '22.x',
    },
    {
      matchDatasources: ['npm'],
      minimumReleaseAge: '3 days',
    },
    {
      // v6.1.1 does not work with @nx/eslint-plugin due to flat/legacy config
      matchPackageNames: ['eslint-plugin-react-hooks'],
      allowedVersions: '!/6\\.1\\.1/',
    },
  ],
}
