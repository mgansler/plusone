{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:recommended', ':pinAllExceptPeerDependencies', 'group:allNonMajor'],
  automerge: false,
  osvVulnerabilityAlerts: true,
  packageRules: [
    {
      matchPackageNames: ['node'],
      allowedVersions: '22.x',
    },
    {
      // Breaking change with generated orval clients
      matchPackageNames: ['@tanstack/react-query', '@tanstack/react-query-devtools'],
      allowedVersions: '5.79.x',
    },
  ],
}
