{
  "root": "apps/advent-of-code-2021",
  "sourceRoot": "apps/advent-of-code-2021/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "rm -rf apps/advent-of-code-2021/build apps/advent-of-code-2021/public/build"
      },
      "configurations": {
        "production": {}
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "remix build",
        "cwd": "apps/advent-of-code-2021"
      },
      "dependsOn": [
        {
          "target": "clean",
          "projects": "self"
        }
      ]
    },
    "serve": {
      "executor": "@mgansler/nx-remix:serve",
      "options": {
        "port": 3000
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/advent-of-code-2021/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/advent-of-code-2021"],
      "options": {
        "jestConfig": "apps/advent-of-code-2021/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
