          },
          "saturation": {
            "type": "number",
            "nullable": true
          },
          "brightness": {
            "type": "number",
            "nullable": true
          },
          "temperature": {
            "type": "number",
            "nullable": true
          }
        },
        "required": [
          "on"
        ]
      },
      "TransitionToColorRequestDto": {
        "type": "object",
        "properties": {
