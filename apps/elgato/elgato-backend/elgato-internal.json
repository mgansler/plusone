      },
      "LocationDataResponseDto": {
        "type": "object",
        "properties": {
          "longitude": {
            "type": "number"
          },
          "latitude": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "sunrise": {
            "format": "date-time",
            "type": "string"
          },
          "sunset": {
            "format": "date-time",
            "type": "string"
          },
          "firstLight": {
            "format": "date-time",
            "type": "string",
            "nullable": true
          },
          "lastLight": {
            "format": "date-time",
            "type": "string",
            "nullable": true
          },
          "dawn": {
            "format": "date-time",
            "type": "string"
          },
          "dusk": {
            "format": "date-time",
            "type": "string"
          },
          "solarNoon": {
            "format": "date-time",
            "type": "string"
          },
          "goldenHour": {
            "format": "date-time",
            "type": "string"
          },
          "dayLength": {
            "type": "number",
