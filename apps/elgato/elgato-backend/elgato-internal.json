          },
          "timeZone": {
            "type": "string"
          },
          "utcOffset": {
            "type": "number"
          }
        },
        "required": [
          "longitude",
          "latitude",
          "name",
          "sunrise",
          "sunset",
          "firstLight",
          "lastLight",
          "dawn",
          "dusk",
          "solarNoon",
          "goldenHour",
          "dayLength",
          "timeZone",
          "utcOffset"
        ]
      },
