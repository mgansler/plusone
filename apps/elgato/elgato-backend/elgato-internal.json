          "sunrise": {
            "type": "boolean"
          },
          "sunset": {
            "type": "boolean"
          }
        },
        "required": [
          "sunrise",
          "sunset"
        ]
      },
      "DeviceSettingsRequestDto": {
        "type": "object",
        "properties": {
          "sunrise": {
            "type": "boolean"
          },
          "sunset": {
            "type": "boolean"
          }
        }
      },
      "LocationUpdateRequestDto": {
        "type": "object",
        "properties": {
          "longitude": {
            "type": "number"
          },
          "latitude": {
            "type": "number"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "longitude",
          "latitude",
          "name"
        ]
      },
      "LocationResponseDto": {
        "type": "object",
        "properties": {
          "longitude": {
            "type": "number"
          },
          "latitude": {
            "type": "number"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
