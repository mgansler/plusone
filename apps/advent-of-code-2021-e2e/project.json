{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/advent-of-code-2021-e2e/src",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "@nrwl/cypress:cypress",
      "options": {
        "cypressConfig": "apps/advent-of-code-2021-e2e/cypress.config.ts",
        "tsConfig": "apps/advent-of-code-2021-e2e/tsconfig.e2e.json",
        "baseUrl": "http://localhost:3000",
        "devServerTarget": "advent-of-code-2021-e2e:serve-app",
        "testingType": "e2e"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "serve-app": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run advent-of-code-2021:serve"],
        "readyWhen": "Remix App Server started at"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/advent-of-code-2021-e2e/**/*.{js,ts}"]
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["advent-of-code-2021"]
}
