    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "cypress/**/*",
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.js",
    "**/*.cy.tsx",
    "**/*.cy.jsx"
  ],
  "compilerOptions": {
    "types": ["jest", "node"]
  }
}
