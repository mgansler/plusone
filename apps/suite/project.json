{
  "name": "suite",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/suite/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/suite",
        "index": "apps/suite/src/index.html",
        "baseHref": "/",
        "main": "apps/suite/src/main.tsx",
        "polyfills": "apps/suite/src/polyfills.ts",
        "tsConfig": "apps/suite/tsconfig.app.json",
        "assets": ["apps/suite/src/favicon.ico", "apps/suite/src/assets"],
        "styles": [],
        "scripts": [],
        "webpackConfig": "@nx/react/plugins/webpack"
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/suite/src/environments/environment.ts",
              "with": "apps/suite/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        },
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        }
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker build -t ${DOCKER_IMAGE_NAME} -f apps/suite/Dockerfile ."],
        "parallel": false
      },
      "configurations": {
        "ci": {
          "commands": [
            "docker build -t ${CI_REGISTRY_IMAGE}/suite-app/${CI_COMMIT_REF_SLUG} -f apps/suite/Dockerfile .",
            "docker push ${CI_REGISTRY_IMAGE}/suite-app/${CI_COMMIT_REF_SLUG}:latest"
          ]
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker compose -f apps/suite/docker-compose.deploy.yml up -d --remove-orphans"],
        "parallel": false
      },
      "configurations": {
        "ci": {
          "commands": [
            "DOCKER_IMAGE_NAME=${CI_REGISTRY_IMAGE}/suite-app/${CI_COMMIT_REF_SLUG} docker compose -f apps/suite/docker-compose.deploy.yml pull",
            "DOCKER_IMAGE_NAME=${CI_REGISTRY_IMAGE}/suite-app/${CI_COMMIT_REF_SLUG} docker compose -f apps/suite/docker-compose.deploy.yml up -d --remove-orphans"
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "options": {
        "buildTarget": "suite:build",
        "hmr": true
      },
      "configurations": {
        "production": {
          "buildTarget": "suite:build:production",
          "hmr": false
        },
        "development": {
          "buildTarget": "suite:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/suite/**/*.{ts,tsx,js,jsx}"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/suite"],
      "options": {
        "jestConfig": "apps/suite/jest.config.ts"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["dinner-plan"]
}
