{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@plusone/components": ["libs/components/src/index.ts"],
      "@plusone/conference-links": ["libs/conference-links/src/index.ts"],
      "@plusone/date-utils": ["libs/date-utils/src/index.ts"],
      "@plusone/dinner-plan": ["libs/dinner-plan/src/index.ts"],
      "@plusone/dom-utils": ["libs/dom-utils/src/index.ts"],
      "@plusone/feeds-schema": ["libs/feeds-schema/src/index.ts"],
      "@plusone/feeds/backend/article": ["libs/feeds/backend/article/src/index.ts"],
      "@plusone/feeds/backend/authentication": ["libs/feeds/backend/authentication/src/index.ts"],
      "@plusone/feeds/backend/database": ["libs/feeds/backend/database/src/index.ts"],
      "@plusone/feeds/backend/discover": ["libs/feeds/backend/discover/src/index.ts"],
      "@plusone/feeds/backend/feed": ["libs/feeds/backend/feed/src/index.ts"],
      "@plusone/feeds/backend/fetch": ["libs/feeds/backend/fetch/src/index.ts"],
      "@plusone/feeds/backend/user": ["libs/feeds/backend/user/src/index.ts"],
      "@plusone/github-hooks": ["libs/github-hooks/src/index.ts"],
      "@plusone/github-schema": ["libs/github-schema/src/index.ts"],
      "@plusone/hooks": ["libs/hooks/src/index.ts"],
      "@plusone/feeds/web/login": ["libs/feeds/web/login/src/index.ts"],
      "@plusone/feeds/web/admin-view": ["libs/feeds/web/admin-view/src/index.ts"],
      "@plusone/feeds/web/user-view": ["libs/feeds/web/user-view/src/index.ts"],
      "@plusone/dark-mode-theme-provider": ["libs/dark-mode-theme-provider/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
